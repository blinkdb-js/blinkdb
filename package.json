{
  "name": "@blinkdb/workspace",
  "private": true,
  "description": "workspace for blinkDB",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "node ./prepare.js",
    "build": "npm run build -w=blinkdb",
    "publish": "npm publish -w=blinkdb",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "devDependencies": {
    "@swc/core": "^1.2.242",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.7",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "^3.2.0"
  },
  "prettier": {
    "printWidth": 90
  },
  "lint-staged": {
    "*.{js,ts}": "prettier --write"
  }
}
