---
import "@fontsource/fredoka";
import "@fontsource/inter";
import "@fontsource/source-code-pro";

import Navbar, { Props as NavbarProps } from "../components/navbar.astro";

export interface Props extends NavbarProps {
  title?: string;
}

const { title, frontmatter, ...attrs } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `BlinkDB - ${title}` : "BlinkDB"}</title>
  </head>
  <body class="overflow-y-scroll h-full">
    <Navbar {...attrs} />
    <div class="mt-16"><slot /></div>
  </body>
</html>
